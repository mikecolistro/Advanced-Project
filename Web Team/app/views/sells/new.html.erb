<h1>Sell a book</h1>

<%= form_tag(action: "create", method: "get") do %>

    <table>
      <tr>
        <td><%= hidden_field_tag :edition_id, @edition.id %></td>
      </tr>
      <tr>
        <th>Title:</th>
        <td><%= text_field_tag nil, @edition.title, readonly: true, class: 'input-xlarge' %></td>
      </tr>
      <tr>
        <th>ISBN:</th>
        <td><%= text_field_tag nil, @edition.isbn, readonly: true %></td>
      </tr>
      <tr>
        <th>Author:</th>
        <td><%= text_field_tag nil, @edition.author, readonly: true %></td>
      </tr>
      <tr>
        <th>Edition:</th>
        <td><%= text_field_tag nil, @edition.edition_num, readonly: true %></td>
      </tr>
      <tr>
        <th>Image:</th>
        <td><%= image_tag @edition.image, size: "100x50" %></td>
      </tr>
      <tr>
        <th>Price:</th>
        <td><%= text_field_tag :price %></td>
      </tr>
    </table>
    <br>

    <div>
      <%= submit_tag("Sell book", {class: "btn btn-success"}) %>
    </div>

<% end %>